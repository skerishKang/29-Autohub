<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Importance Indicator -->
            <View
                android:id="@+id/viewImportance"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_importance_medium" />

            <!-- Sender and Timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvSender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="발신자"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        tools:text="김철수" />

                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방금"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        tools:text="오후 3:45" />

                </LinearLayout>

                <!-- Category and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_category"
                        android:paddingStart="6dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="2dp"
                        android:text="개인"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        tools:text="개인" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Status Icons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivSpamIndicator"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_spam"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <ImageView
                            android:id="@+id/ivMaskedIndicator"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_mask"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <ImageView
                            android:id="@+id/ivRelayStatus"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="@android:color/holo_green_dark"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Content -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SMS 내용이 여기에 표시됩니다"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="안녕하세요! 오늘 저녁에 회식이 있습니다. 7시에 레스토랑에서 만나요!" />

        <!-- Keywords and Summary (if available) -->
        <LinearLayout
            android:id="@+id/layoutKeywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키워드: "
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvKeywords"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="회식, 저녁, 레스토랑"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary"
                tools:text="회식, 저녁, 레스토랑" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="요약: 저녁 7시 레스토랑 회식"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            tools:text="요약: 저녁 7시 레스토랑 회식" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnMarkAsRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="읽음"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp" />

            <TextView
                android:id="@+id/btnToggleMask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="마스킹"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp" />

            <TextView
                android:id="@+id/btnRelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="전송"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_primary"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>